---
const heroTitle = "Bienvenido a la Sección de Prédicas";
const heroDescription = "Explora nuestras últimas prédicas y mensajes inspiradores para fortalecer tu fe y conocimiento.";
const ctaText = "Ver Prédicas";
const ctaLink = "/predicas"; // Reemplaza con el enlace a la sección de prédicas
const heroImage = "/images/hero-predicas.jpg"; // Reemplaza con la ruta de tu imagen de fondo
---

<section class="hero-section bg-gray-100 py-20">
  <div class="container mx-auto px-4 text-center">
    <div class="relative bg-cover bg-center rounded-lg shadow-lg overflow-hidden" style={`background-image: url(${heroImage})`}>
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>
      <div class="relative z-10 p-10 lg:p-20">
        <h1 class="text-4xl md:text-5xl lg:text-6xl text-white font-bold mb-6">
          {heroTitle}
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-white mb-8">
          {heroDescription}
        </p>
        <a 
          href={ctaLink} 
          class="inline-block bg-blue-600 text-white text-lg font-semibold px-8 py-3 rounded-lg shadow-lg transition-transform duration-300 transform hover:scale-105 hover:bg-blue-700"
        >
          {ctaText}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-section {
    background-color: #f7fafc; /* Fondo claro para la sección */
    padding: 80px 0; /* Espaciado alrededor de la sección */
  }

  .hero-section .bg-cover {
    background-size: cover;
    background-position: center;
  }

  .hero-section .bg-opacity-50 {
    background-color: rgba(0, 0, 0, 0.5); /* Fondo negro con opacidad */
  }
</style>
